<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Serial Studio Light">
  <!-- General Colors -->
  <style name="Text" foreground="#1C1C1C" background="#F9F9F9"/>
  <style name="Selection" background="#229DEE" foreground="#FFFFFF"/>
  <style name="LineNumber" foreground="#999999" background="#F9F9F9"/>
  <style name="CurrentLine" background="#EFEFEF"/>
  <style name="CurrentLineNumber" foreground="#229DEE" bold="true"/>
  <style name="Occurrences" background="#D0D0D0"/>
  <style name="SearchResult" background="#FFEB99" foreground="#1C1C1C"/>

  <!-- Syntax Highlighting -->
  <style name="Keyword" foreground="#007AFF" bold="true"/>
  <style name="Type" foreground="#5D5FEF"/>
  <style name="Function" foreground="#FF9F0A"/>
  <style name="Macro" foreground="#FFD500"/>
  <style name="String" foreground="#33C97A"/>
  <style name="Number" foreground="#D94141"/>
  <style name="Comment" foreground="#7F7F7F" italic="true"/>
  <style name="Label" foreground="#A766D0"/>
  <style name="Operator" foreground="#229DEE"/>
  <style name="Punctuation" foreground="#2A2A2A"/>
  <style name="Preprocessor" foreground="#A766D0" italic="true"/>

  <!-- Braces and Matching -->
  <style name="Parentheses" background="#C0E4FF" foreground="#1C1C1C"/>
  <style name="ParenthesesMismatch" background="#D94141" foreground="#FFFFFF"/>

  <!-- Errors and Warnings -->
  <style name="Warning" underlineColor="#FFD500" underlineStyle="SingleUnderline"/>
  <style name="Error" underlineColor="#D94141" underlineStyle="SingleUnderline"/>
  <style name="DisabledCode" foreground="#BEBEBE" italic="true"/>

  <!-- Diff Highlighting -->
  <style name="AddedLine" foreground="#33C97A"/>
  <style name="RemovedLine" foreground="#D94141"/>
  <style name="DiffContextLine" background="#F2F2F2"/>
  <style name="DiffSourceLine" background="#FFF3C1"/>
  <style name="DiffDestLine" background="#C4F2C4"/>
</style-scheme>
